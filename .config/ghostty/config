# Theme
theme = rose-pine
background-blur-radius = 20
background-opacity = 0.90
bold-is-bright = true

# Fonts
font-family = JetBrainsMono Nerd Font
font-feature = -calt
font-feature = -clig
font-feature = -liga
font-size = 13

# Window
confirm-close-surface = false
macos-titlebar-style = hidden
shell-integration = zsh
shell-integration-features = no-cursor, sudo
window-padding-balance = true
window-padding-x = 10
window-padding-y = 10
quit-after-last-window-closed = true

# Cursor
cursor-color = white
cursor-style-blink = false

# Mouse
mouse-hide-while-typing = true

# Misc
copy-on-select = true
desktop-notifications = false
link-url = true
macos-option-as-alt = true
scrollback-limit = 10000

# Startup
command = /bin/zsh -l -c 'tmux a -t main || tmux new -s main'

# Keybindings
keybind = super+shift+r=reload_config
keybind = super+shift+h=new_split:down
keybind = super+shift+v=new_split:right
keybind = super+shift+j=goto_split:bottom
keybind = super+shift+k=goto_split:top
keybind = super+shift+h=goto_split:left
keybind = super+shift+l=goto_split:right
